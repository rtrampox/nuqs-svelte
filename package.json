{
  "name": "nuqs-svelte-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Isaque Weskerson",
    "email": "me@rtrampox.dev"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "^1.3.5",
      "semantic-release": "^25.0.2",
      "prettier": "^3.7.4",
      "prettier-plugin-svelte": "^3.4.1",
      "prettier-plugin-tailwindcss": "^0.7.2",
      "typescript": "^5.9.3"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rtrampox/nuqs-svelte"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "check-types": "turbo check-types",
    "lint": "pnpm run -w --parallel --stream '/^lint:/'",
    "lint:prettier": "prettier --check ./packages/nuqs-svelte/src/**/*.{ts,svelte}",
    "lint:sherif": "sherif"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "catalog:",
    "prettier-plugin-svelte": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "semantic-release": "catalog:",
    "sherif": "^1.6.1",
    "turbo": "^2.5.4"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": []
  },
  "packageManager": "bun@1.3.4",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
